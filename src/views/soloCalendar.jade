extends layout

block headScript

block content
  include calendar

  #info_controls
    .info-block
      h3.info-block-title Your calendars
      ul#calendars
          li.hidden
            span.calendar-name
            span.toggle-view hide
    .info-block
      form#add_calendar
        h3.info-block-title Add a calendar
        div
          label(for='type') Type
          select#type(name='type')
            option(value='NUSMods') NUSMods.com
        div
          label(for='url') URL
          input#url(name='url' type='text')
        div
          input#submit(type='submit' value='Add calendar')

block footScripts