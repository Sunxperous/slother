extends layout
include mixins/errors.jade

block headScript

block content
  h2.empty-space Register

  +errors(messages)

  div.forms-wrapper
    form#register_default(method='post' action='/register')
      div
        label(for='username') Username
          input#username(type='text' placeholder='username' name='username' autofocus value=username)
      div
        label(for='password') Password
          input#password(type='password' placeholder='password' name='password')
      div
        label(for='display_name') Display name
          input#display_name(type='text' placeholder='display name' name='display_name' value=display_name)
      div
        input.green(type='submit' value='Register')
    div
      form#register_nus(method='get' action='/login/nus')
        input(type='hidden' name='openid_identifier' value='https://openid.nus.edu.sg')
        input(type='submit' value='Use NUS OpenID')

block footScripts