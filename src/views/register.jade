extends layout

block headScript

block content
  h2.empty-space Register
  div.forms-wrapper
    form#register_default(method='post', action='/register')
      div
        label(for='username') Username
          input#username(type='text', placeholder='username', name='username')
      div
        label(for='password') password
          input#password(type='password', placeholder='password', name='password')
      div
        input(type='submit' value='Register')
    div
      form#register_nus(method='get', action='/login/nus')
        input(type='hidden', name='openid_identifier', value='https://openid.nus.edu.sg')
        input(type='submit' value='Register with NUS OpenID')

block footScripts