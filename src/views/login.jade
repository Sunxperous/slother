extends layout

block headScript

block content
  h2 Login
  form#loginDefault.form-horizontal(method='post', action='/login/default')
    div
      label(for='username') Username
      input(type='text', placeholder='username', name='username')
    div
      label(for='password') Password
      input(type='password', placeholder='password', name='password')
    div
      input(type='submit' value='Login')

  form#loginNus(method='get', action='/login/nus')
    input(type='hidden', name='openid_identifier', value='https://openid.nus.edu.sg')
    input(type='submit' value='Login with NUS OpenID')

  a(href='/register') Register

block footScripts