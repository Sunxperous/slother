block vars
  - var title = 'Login'

extends layout
include mixins/errors.jade

block headScript

block content
  h2.empty-space= title

  +errors(messages)

  div.forms-wrapper
    form#login_default.form-horizontal(method='post' action='/login/default')
      div
        label(for='username') Username
          input#username(type='text' placeholder='username' name='username' autofocus value=username)
      div
        label(for='password') Password
          input#password(type='password' placeholder='password' name='password')
      div
        input.green(type='submit' value='Login')

    div
      form#login_nus(method='get' action='/login/nus')
        input(type='hidden' name='openid_identifier' value='https://openid.nus.edu.sg')
        input(type='submit' value='Use NUS OpenID')

block footScripts