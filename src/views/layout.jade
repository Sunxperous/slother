doctype html
html(lang='en')
  head
    - var title = title || "Slother"
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=0.8, maximum-scale=1.5')
    script(src='/vendor/jquery-2.1.1.min.js')
    script(src='/vendor/moment.min.js')

    block headScripts
    //-link(rel='stylesheet', href='/vendor/bootstrap.css')
    link(rel='stylesheet', href='/css/main.css')
  body
    header
      nav
        #brand
          a(href='/')
            h1 Slother
        #links
          if (user)
            div
              a#groups(href='#') Groups
            #user
              a#username(href='#')= user.username
            #notification
              span#number 1
      if (messages)
        if (messages.requests.length > 0)
          #requests
            each message in messages.requests
              span.message= message
        if (messages.errors.length > 0)
          #errors
            each message in messages.errors
              span.message= message
        if (messages.alerts.length > 0)
          #alerts
            each message in messages.alerts
              span.message= message
    div#content
      block content
    block footScripts