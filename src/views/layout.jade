doctype html

html(lang='en')
  head
    - var title = title || "Slother"
    title= title
    meta(name='viewport' content='width=device-width, initial-scale=0.8, maximum-scale=0.8')
    script(src='/vendor/jquery-2.1.1.min.js')
    script(src='/vendor/moment.min.js')

    block headScripts
    link(rel='stylesheet' href='/css/main.css')
    link(href='http://fonts.googleapis.com/css?family=Telex' rel='stylesheet' type='text/css')
    script(src='/js/errors.js')

  body
    header
      nav
        a(href='/')
          #brand
            h1 - Slother -
        #links
          if (user)
            div
              a#groups(href='/group') Groups
            span#user
              //- a#username(href='#') MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM
              a#username(href='#')= user.display_name
            #notification
              if (user.requests.length > 0)
                a#number.has-notifications(href='#')= user.requests.length
              else
                a#number.no-notifications(href='#')= user.requests.length
          else
            a(href='/login') Login
            a(href='/register') Register
            
    div#content
      block content
    block footScripts